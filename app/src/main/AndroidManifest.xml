<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dbulawa.calendar">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name=".HiltApplicationBase"
        android:allowBackup="true"
        android:icon="@drawable/ic_calendar1"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_calendar1"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.main.SplashScreenActivity" android:theme="@style/SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.main.MainActivity" android:theme="@style/AppTheme"/>
        <activity android:name=".ui.main.eventdetail.EventDetailActivity" />
    </application>

</manifest>